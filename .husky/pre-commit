#!/bin/sh

# Pre-commit hook for Git

BRANCH=$(git rev-parse --abbrev-ref HEAD)

# Skip checks on certain branches
if [ "$BRANCH" = "main" ] || [ "$BRANCH" = "master" ]; then
    echo "Cannot commit directly to main/master. Create a feature branch."
    exit 1
fi

# Run linting on staged files
echo "Running pre-commit checks..."

# Type checking
echo "Type checking..."
npx tsc --noEmit
if [ $? -ne 0 ]; then
    echo "Type checking failed. Aborting commit."
    exit 1
fi

# Lint-staged for ESLint + Prettier
npx lint-staged

if [ $? -ne 0 ]; then
    echo "Pre-commit checks failed. Aborting commit."
    exit 1
fi

echo "Pre-commit checks passed!"
exit 0
